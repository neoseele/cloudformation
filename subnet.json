                                ]
                            ]
                        }
                    },
                    {
                        "Key": "ServiceComponent",
                        "Value": "Network"
                    },
                    {
                        "Key": "ServiceName",
                        "Value": "ExternalLoadBalancerSubnet"
                    },
                    {
                        "Key": "ServicePhase",
                        "Value": {
                            "Ref": "ServicePhase"
                        }
                    }
                ],
                "VpcId": {
                    "Ref": "VPC"
                }
            },
            "Type": "AWS::EC2::Subnet"
        },
        "ExternalLoadBalancerSubnetRouteTableAssociation": {
            "Properties": {
                "RouteTableId": {
                    "Ref": "ExternalRouteTable"
                },
                "SubnetId": {
                    "Ref": "ExternalLoadBalancerSubnet"
