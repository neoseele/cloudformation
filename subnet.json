        "ExternalRouteTable": {
            "Description": "",
            "Type": "String"
        },
        "InternalAcl": {
            "Description": "",
            "Type": "String"
        },
        "InternalRouteTable": {
            "Description": "",
            "Type": "String"
        },
        "ServicePhase": {
            "Description": "",
            "Type": "String"
        },
        "VPC": {
            "Description": "VPC",
            "Type": "String"
        }
    },
    "Resources": {
        "ApplicationSubnet": {
            "Properties": {
                "AvailabilityZone": {
                    "Fn::Join": [
                        "",
                        [
                            {
                                "Ref": "AWS::Region"
                            },
                            {
                                "Fn::FindInMap": [
                                    "Case",
                                    {
                                        "Ref": "AvailabilityZone"
                                    },
                                    "Low"
                                ]
                            }
                        ]
                    ]
                },
                "CidrBlock": {
                    "Ref": "ApplicationCIDR"
                },
                "Tags": [
                    {
                        "Key": "Name",
                        "Value": {
                            "Fn::Join": [
                                "",
                                [
                                    "ApplicationSubnet",
                                    {
                                        "Ref": "AvailabilityZone"
                                    }
                                ]
                            ]
                        }
                    },
                    {
                        "Key": "ServiceComponent",
                        "Value": "Network"
                    },
                    {
                        "Key": "ServiceName",
                        "Value": "ApplicationSubnet"
                    },
                    {
                        "Key": "ServicePhase",
                        "Value": {
                            "Ref": "ServicePhase"
                        }
                    }
                ],
                "VpcId": {
                    "Ref": "VPC"
                }
            },
            "Type": "AWS::EC2::Subnet"
        },
        "ApplicationSubnetAclAssociation": {
            "Properties": {
                "NetworkAclId": {
                    "Ref": "InternalAcl"
                },
                "SubnetId": {
                    "Ref": "ApplicationSubnet"
                }
            },
            "Type": "AWS::EC2::SubnetNetworkAclAssociation"
        },
        "ApplicationSubnetRouteTableAssociation": {
            "Properties": {
                "RouteTableId": {
                    "Ref": "InternalRouteTable"
                },
                "SubnetId": {
                    "Ref": "ApplicationSubnet"
                }
            },
            "Type": "AWS::EC2::SubnetRouteTableAssociation"
        },
