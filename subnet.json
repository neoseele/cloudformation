                    {
                        "Key": "ServicePhase",
                        "Value": {
                            "Ref": "ServicePhase"
                        }
                    }
                ],
                "VpcId": {
                    "Ref": "VPC"
                }
            },
            "Type": "AWS::EC2::Subnet"
        },
