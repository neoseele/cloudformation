{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Description": "VPC Subnets",
    "Mappings": {
        "Case": {
            "A": {
                "Low": "a"
            },
            "B": {
                "Low": "b"
            },
            "C": {
                "Low": "c"
            },
            "D": {
                "Low": "d"
            }
        },
        "NatRegionMap": {
            "ap-northeast-1": {
                "AMI": "ami-27d6e626"
            },
            "ap-southeast-1": {
                "AMI": "ami-6aa38238"
            },
            "ap-southeast-2": {
                "AMI": "ami-893f53b3"
            },
            "eu-central-1": {
                "AMI": "ami-ae380eb3"
            },
            "eu-west-1": {
                "AMI": "ami-14913f63"
            },
            "sa-east-1": {
                "AMI": "ami-8122969c"
            },
            "us-east-1": {
                "AMI": "ami-184dc970"
            },
            "us-west-1": {
                "AMI": "ami-a98396ec"
            },
            "us-west-2": {
                "AMI": "ami-290f4119"
            }
        }
    },
    "Parameters": {
        "ApplicationCidr": {
            "Description": "",
            "Type": "String"
        },
        "AvailabilityZone": {
            "Description": "",
            "Type": "String"
        },
        "DatabaseCidr": {
            "Description": "",
            "Type": "String"
        },
        "DefaultProfile": {
            "Description": "",
            "Type": "String"
        },
        "DefaultRole": {
            "Description": "",
            "Type": "String"
        },
        "ExternalAcl": {
            "Description": "",
            "Type": "String"
        },
        "ExternalCidr": {
            "Description": "",
            "Type": "String"
        },
        "ExternalLoadBalancerCidr": {
            "Description": "",
            "Type": "String"
        },
        "ExternalRouteTable": {
            "Description": "",
            "Type": "String"
        },
        "InternalAcl": {
            "Description": "",
            "Type": "String"
        },
        "InternalRouteTable": {
            "Description": "",
            "Type": "String"
        },
        "KeyName": {
            "AllowedPattern": "[-_ a-zA-Z0-9]*",
            "ConstraintDescription": "can contain only alphanumeric characters, spaces, dashes and underscores.",
            "Description": "Name of an existing EC2 KeyPair (find or create here: https://console.aws.amazon.com/ec2/v2/home#KeyPairs: )",
            "MaxLength": "64",
            "MinLength": "1",
            "Type": "String"
        },
        "NatSecurityGroup": {
            "Description": "",
            "Type": "String"
        },
        "ServicePhase": {
            "Description": "",
            "Type": "String"
        },
        "SystemOperationsBucketName": {
            "Description": "",
            "Type": "String"
        },
        "Vpc": {
            "Description": "",
            "Type": "String"
        }
    },
    "Resources": {
        "ApplicationSubnet": {
            "Properties": {
                "AvailabilityZone": {
                    "Fn::Join": [
                        "",
                        [
                            {
                                "Ref": "AWS::Region"
                            },
                            {
                                "Fn::FindInMap": [
                                    "Case",
                                    {
                                        "Ref": "AvailabilityZone"
                                    },
                                    "Low"
                                ]
                            }
                        ]
                    ]
                },
                "CidrBlock": {
                    "Ref": "ApplicationCidr"
                },
                "Tags": [
                    {
                        "Key": "Name",
                        "Value": {
                            "Fn::Join": [
                                "",
                                [
                                    "ApplicationSubnet",
                                    {
                                        "Ref": "AvailabilityZone"
                                    }
                                ]
                            ]
                        }
                    },
                    {
                        "Key": "ServiceComponent",
                        "Value": "Network"
                    },
                    {
                        "Key": "ServiceName",
                        "Value": "ApplicationSubnet"
                    },
                    {
                        "Key": "ServicePhase",
                        "Value": {
                            "Ref": "ServicePhase"
                        }
                    }
                ],
                "VpcId": {
                    "Ref": "Vpc"
                }
            },
            "Type": "AWS::EC2::Subnet"
        },
        "ApplicationSubnetAclAssociation": {
            "Properties": {
                "NetworkAclId": {
                    "Ref": "InternalAcl"
                },
                "SubnetId": {
                    "Ref": "ApplicationSubnet"
                }
            },
            "Type": "AWS::EC2::SubnetNetworkAclAssociation"
        },
        "ApplicationSubnetRouteTableAssociation": {
            "Properties": {
                "RouteTableId": {
                    "Ref": "InternalRouteTable"
                },
                "SubnetId": {
                    "Ref": "ApplicationSubnet"
                }
            },
            "Type": "AWS::EC2::SubnetRouteTableAssociation"
        },
        "DatabaseSubnet": {
            "Properties": {
                "AvailabilityZone": {
                    "Fn::Join": [
                        "",
                        [
                            {
                                "Ref": "AWS::Region"
                            },
                            {
                                "Fn::FindInMap": [
                                    "Case",
                                    {
                                        "Ref": "AvailabilityZone"
                                    },
                                    "Low"
                                ]
                            }
                        ]
                    ]
                },
                "CidrBlock": {
                    "Ref": "DatabaseCidr"
                },
                "Tags": [
                    {
                        "Key": "Name",
                        "Value": {
                            "Fn::Join": [
                                "",
                                [
                                    "DatabaseSubnet",
                                    {
                                        "Ref": "AvailabilityZone"
                                    }
                                ]
                            ]
                        }
                    },
                    {
                        "Key": "ServiceComponent",
                        "Value": "Network"
                    },
                    {
                        "Key": "ServiceName",
                        "Value": "DatabaseSubnet"
                    },
                    {
                        "Key": "ServicePhase",
                        "Value": {
                            "Ref": "ServicePhase"
                        }
                    }
                ],
                "VpcId": {
                    "Ref": "Vpc"
                }
            },
            "Type": "AWS::EC2::Subnet"
        },
        "DatabaseSubnetRouteTableAssociation": {
            "Properties": {
                "RouteTableId": {
                    "Ref": "InternalRouteTable"
                },
                "SubnetId": {
                    "Ref": "DatabaseSubnet"
                }
            },
            "Type": "AWS::EC2::SubnetRouteTableAssociation"
        },
        "ExternalLoadBalancerSubnet": {
            "Properties": {
                "AvailabilityZone": {
                    "Fn::Join": [
                        "",
                        [
                            {
                                "Ref": "AWS::Region"
                            },
                            {
                                "Fn::FindInMap": [
                                    "Case",
                                    {
                                        "Ref": "AvailabilityZone"
                                    },
                                    "Low"
                                ]
                            }
                        ]
                    ]
                },
                "CidrBlock": {
                    "Ref": "ExternalLoadBalancerCidr"
                },
                "Tags": [
                    {
                        "Key": "Name",
                        "Value": {
                            "Fn::Join": [
                                "",
                                [
                                    "ExternalLoadBalancerSubnet",
                                    {
                                        "Ref": "AvailabilityZone"
                                    }
                                ]
                            ]
                        }
                    },
                    {
                        "Key": "ServiceComponent",
                        "Value": "Network"
                    },
                    {
                        "Key": "ServiceName",
                        "Value": "ExternalLoadBalancerSubnet"
                    },
                    {
                        "Key": "ServicePhase",
                        "Value": {
                            "Ref": "ServicePhase"
                        }
                    }
                ],
                "VpcId": {
                    "Ref": "Vpc"
                }
            },
            "Type": "AWS::EC2::Subnet"
        },
        "ExternalLoadBalancerSubnetRouteTableAssociation": {
            "Properties": {
                "RouteTableId": {
                    "Ref": "ExternalRouteTable"
                },
                "SubnetId": {
                    "Ref": "ExternalLoadBalancerSubnet"
                }
            },
            "Type": "AWS::EC2::SubnetRouteTableAssociation"
        },
        "ExternalSubnet": {
            "Properties": {
                "AvailabilityZone": {
                    "Fn::Join": [
                        "",
                        [
                            {
                                "Ref": "AWS::Region"
                            },
                            {
                                "Fn::FindInMap": [
                                    "Case",
                                    {
                                        "Ref": "AvailabilityZone"
                                    },
                                    "Low"
                                ]
                            }
                        ]
                    ]
                },
                "CidrBlock": {
                    "Ref": "ExternalCidr"
                },
                "Tags": [
                    {
                        "Key": "Name",
                        "Value": {
                            "Fn::Join": [
                                "",
                                [
                                    "ExternalSubnet",
                                    {
                                        "Ref": "AvailabilityZone"
                                    }
                                ]
                            ]
                        }
                    },
                    {
                        "Key": "ServiceComponent",
                        "Value": "Network"
                    },
                    {
                        "Key": "ServiceName",
                        "Value": "ExternalSubnet"
                    },
                    {
                        "Key": "ServicePhase",
                        "Value": {
                            "Ref": "ServicePhase"
                        }
                    }
                ],
                "VpcId": {
                    "Ref": "Vpc"
                }
            },
            "Type": "AWS::EC2::Subnet"
        },
        "ExternalSubnetAclAssociation": {
            "Properties": {
                "NetworkAclId": {
                    "Ref": "ExternalAcl"
                },
                "SubnetId": {
                    "Ref": "ExternalSubnet"
                }
            },
            "Type": "AWS::EC2::SubnetNetworkAclAssociation"
        },
        "ExternalSubnetRouteTableAssociation": {
            "Properties": {
                "RouteTableId": {
                    "Ref": "ExternalRouteTable"
                },
                "SubnetId": {
                    "Ref": "ExternalSubnet"
                }
            },
            "Type": "AWS::EC2::SubnetRouteTableAssociation"
        },
        "NatInstance": {
            "Metadata": {
                "AWS::CloudFormation::Authentication": {
                    "S3AccessCreds": {
                        "roleName": {
                            "Ref": "DefaultRole"
                        },
                        "type": "S3"
                    }
                },
                "AWS::CloudFormation::Init": {
                    "config": {
                        "files": {
                            "/etc/yum.repos.d/epel.repo": {
                                "group": "root",
                                "mode": "000644",
                                "owner": "root",
                                "source": "https://s3.amazonaws.com/cloudformation-examples/enable-epel-on-amazon-linux-ami"
                            },
                            "/home/ec2-user/.boto": {
                                "content": {
                                    "Fn::Join": [
                                        "",
                                        [
                                            "[Boto]\n",
                                            "aws_region=",
                                            {
                                                "Ref": "AWS::Region"
                                            },
                                            "\n"
                                        ]
                                    ]
                                },
                                "group": "ec2-user",
                                "mode": "000644",
                                "owner": "ec2-user"
                            },
                            "/home/ec2-user/.gitconfig": {
                                "authentication": "S3AccessCreds",
                                "group": "ec2-user",
                                "mode": "000644",
                                "owner": "ec2-user",
                                "source": {
                                    "Fn::Join": [
                                        "",
                                        [
                                            "https://s3-",
                                            {
                                                "Ref": "AWS::Region"
                                            },
                                            ".amazonaws.com/",
                                            {
                                                "Ref": "SystemOperationsBucketName"
                                            },
                                            "/gitconfig"
                                        ]
                                    ]
                                }
                            },
                            "/home/ec2-user/.vimrc": {
                                "authentication": "S3AccessCreds",
                                "group": "ec2-user",
                                "mode": "000644",
                                "owner": "ec2-user",
                                "source": {
                                    "Fn::Join": [
                                        "",
                                        [
                                            "https://s3-",
                                            {
                                                "Ref": "AWS::Region"
                                            },
                                            ".amazonaws.com/",
                                            {
                                                "Ref": "SystemOperationsBucketName"
                                            },
                                            "/vimrc"
                                        ]
                                    ]
                                }
                            }
                        },
                        "packages": {
                            "rubygems": {
                                "json": []
                            },
                            "yum": {
                                "gcc": [],
                                "git": [],
                                "make": [],
                                "puppet": [],
                                "ruby-devel": [],
                                "rubygems": [],
                                "tree": []
                            }
                        },
                        "services": {
                            "sysvinit": {
                                "puppet": {
                                    "enabled": "false",
                                    "ensureRunning": "false"
                                }
                            }
                        }
                    }
                }
            },
            "Properties": {
                "IamInstanceProfile": {
                    "Ref": "DefaultProfile"
                },
                "ImageId": {
                    "Fn::FindInMap": [
                        "NatRegionMap",
                        {
                            "Ref": "AWS::Region"
                        },
                        "AMI"
                    ]
                },
                "InstanceType": "t2.micro",
                "KeyName": {
                    "Ref": "KeyName"
                },
                "NetworkInterfaces": [
                    {
                        "AssociatePublicIpAddress": "true",
                        "DeleteOnTermination": "true",
                        "DeviceIndex": "0",
                        "GroupSet": [
                            {
                                "Ref": "NatSecurityGroup"
                            }
                        ],
                        "SubnetId": {
                            "Ref": "ExternalSubnet"
                        }
                    }
                ],
                "SourceDestCheck": "false",
                "Tags": [
                    {
                        "Key": "Name",
                        "Value": {
                            "Fn::Join": [
                                "",
                                [
                                    "NatInstance",
                                    {
                                        "Ref": "AvailabilityZone"
                                    }
                                ]
                            ]
                        }
                    },
                    {
                        "Key": "ServiceComponent",
                        "Value": "Network"
                    },
                    {
                        "Key": "ServiceName",
                        "Value": "NatInstance"
                    },
                    {
                        "Key": "ServicePhase",
                        "Value": {
                            "Ref": "ServicePhase"
                        }
                    }
                ],
                "UserData": {
                    "Fn::Base64": {
                        "Fn::Join": [
                            "",
                            [
                                "#!/bin/bash\n",
                                "exec > /root/install_log 2>&1\n",
                                "set -x\n",
                                "yum update -y && yum install -y yum-cron && chkconfig yum-cron on\n",
                                "yum update -y aws-cfn-bootstrap\n",
                                "# Install the files and packages from the metadata\n",
                                "/opt/aws/bin/cfn-init -v ",
                                "         --stack ",
                                {
                                    "Ref": "AWS::StackName"
                                },
                                "         --resource NatInstance ",
                                "         --region ",
                                {
                                    "Ref": "AWS::Region"
                                },
                                "\n",
                                "# Do the rest of the provisioning\n",
                                "rpm --import /etc/pki/rpm-gpg/RPM-GPG-KEY-EPEL-6\n",
                                "yum install -y ansible\n",
                                "cd /home/ec2-user\n",
                                "git clone https://github.com/neoseele/aws-ansible.git\n",
                                "chown -R ec2-user:ec2-user aws-ansible\n"
                            ]
                        ]
                    }
                }
            },
            "Type": "AWS::EC2::Instance"
        }
    }
}
