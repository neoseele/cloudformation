{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Description": "VPC Subnets",
    "Mappings": {
        "Case": {
            "A": {
                "Low": "a"
            },
            "B": {
                "Low": "b"
            },
            "C": {
                "Low": "c"
            },
            "D": {
                "Low": "d"
            }
        }
    },
    "Parameters": {
        "ApplicationCIDR": {
            "Description": "",
            "Type": "String"
        },
        "AvailabilityZone": {
            "Description": "",
            "Type": "String"
        },
        "DatabaseCIDR": {
            "Description": "",
            "Type": "String"
        },
        "ExternalAcl": {
            "Description": "",
            "Type": "String"
        },
        "ExternalCIDR": {
            "Description": "",
            "Type": "String"
        },
        "ExternalLoadBalancerCIDR": {
            "Description": "",
            "Type": "String"
