{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Description": "VPC",
    "Parameters": {
        "CIDR": {
            "Description": "VPC IP range",
            "Type": "String"
        },
        "Environment": {
            "Description": "VPC's Environment",
            "Type": "String"
        }
    },
    "Resources": {
        "VPC": {
            "Properties": {
                "CidrBlock": {
                    "Ref": "CIDR"
                },
                "Tags": [
                    {
                        "Key": "Application",
                        "Value": {
                            "Ref": "AWS::StackName"
                        }
                    },
                    {
                        "Key": "Environment",
                        "Value": {
                            "Ref": "Environment"
                        }
                    },
                    {
                        "Key": "Name",
                        "Value": {
                            "Fn::Join": [
                                "",
                                [
                                    {
                                        "Ref": "Environment"
                                    },
                                    "VPC"
                                ]
                            ]
                        }
                    }
                ]
            },
            "Type": "AWS::EC2::VPC"
        }
    }
}
